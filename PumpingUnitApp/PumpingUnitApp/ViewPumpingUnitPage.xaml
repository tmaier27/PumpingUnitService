<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PumpingUnitApp.ViewPumpingUnitPage">
   <ContentPage.Resources>
      <ResourceDictionary>
         <Style TargetType="Label">
            <Setter Property="FontSize" Value="Large" />
         </Style>
      </ResourceDictionary>
   </ContentPage.Resources>

   <StackLayout Spacing="5">
      <StackLayout.Padding>
         <OnPlatform x:TypeArguments="Thickness" iOS="5,20" Android="5" WinPhone="5" />
      </StackLayout.Padding>

      <StackLayout Orientation="Horizontal">
         <Label>Connected via: </Label>
         <Label x:Name="ConnectionDetails" />
      </StackLayout>

      <!--<Entry x:Name="RemoteUrl" Placeholder="Enter URL to ping" Keyboard="Url" />
      <Button Text="Test Connectivity" Clicked="OnTestUrl" />
      <Label x:Name="PingResultText" HorizontalOptions="Center" />
      <ActivityIndicator x:Name="NetworkActivity" />-->

   </StackLayout>
</ContentPage>